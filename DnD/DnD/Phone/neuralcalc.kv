<MyRoot>

    calc_field: calc_field

    orientation: 'vertical'
    TextInput:
        id: calc_field
        height: 200
        size_hind: (1,None)
        readonly: True
        disabled: True
        font_size: 124

    GridLayout:
        rows: 6
        columns: 3
        padding: 10
        spacing: 10
        height: 400
        size_hind: (1,None)

        Button:
            text: "C"
            font_size: 26
            on_press: root.clear()
        Button:
            text: "Backspace"
            font_size: 26
            on_press: root.back_space()
        Button:
            text: "="
            font_size: 26
            on_press: root.get_result()



        Button:
            text: "1"
            font_size: 26
            on_press: root.calc_symbol('1')
        Button:
            text: "2"
            font_size: 26
            on_press: root.calc_symbol('2')
        Button:
            text: "3"
            font_size: 26
            on_press: root.calc_symbol('3')

        Button:
            text: "4"
            font_size: 26
            on_press: root.calc_symbol('4')
