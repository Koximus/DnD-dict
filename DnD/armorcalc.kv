<MyRoot>

    calc_field: calc_field

    orientation: 'vertical'
    TextInput:
        id: calc_field
        height: 200
        size_hind: (1,None)
        readonly: True
        disabled: True
        font_size: 124

    GridLayout:
        rows: 4
        columns: 4
        padding: 10
        spacing: 10
        height: 400
        size_hind: (1,None)





        Button:
            text: "1"
            font_size: 26
            on_press: root.calc_symbol('1')
        Button:
            text: "2"
            font_size: 26
            on_press: root.calc_symbol('2')
        Button:
            text: "3"
            font_size: 26
            on_press: root.calc_symbol('3')
        Button:
            text: "Light armor"
            font_size: 26
            on_press: root.set_armor_l()

        Button:
            text: "4"
            font_size: 26
            on_press: root.calc_symbol('4')
        Button:
            text: "5"
            font_size: 26
            on_press: root.calc_symbol('5')
        Button:
            text: "6"
            font_size: 26
            on_press: root.calc_symbol('6')

        Button:
            text: "Medium armor"
            font_size: 26
            on_press: root.set_armor_m()

        Button:
            text: "7"
            font_size: 26
            on_press: root.calc_symbol('7')
        Button:
            text: "8"
            font_size: 26
            on_press: root.calc_symbol('8')
        Button:
            text: "9"
            font_size: 26
            on_press: root.calc_symbol('9')







        Button:
            text: "Heavy armor"
            font_size: 26
            on_press: root.set_armor_h()
        Button:
            text: "C"
            font_size: 26
            on_press: root.clear()

        Button:
            text: "0"
            font_size: 26
            on_press: root.calc_symbol('0')

        Button:
            text: "="
            font_size: 26
            on_press: root.get_result()

        Button:
            text: "Mage Shield"
            font_size: 26
            on_press: root.set_armor_ms()